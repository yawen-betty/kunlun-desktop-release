{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "devtools": true,
        "dragDropEnabled": true,
        "label": "main",
        "maximized": true,
        "minHeight": 768,
        "minWidth": 1366,
        "resizable": true,
        "title": "昆仑",
        "transparent": false
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/node"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/mcp-entry.cjs",
      "binaries/mcp-modules"
    ],
    "targets": "all"
  },
  "identifier": "com.liangji.kunlun",
  "plugins": {
    "fs": {
      "scope": [
        "$LOG/*"
      ]
    },
    "process": {
      "relaunch": true
    },
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://hr-ai.dev.lingxizhifu.cn/assets/kl-desktop/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQwQ0JDMzE2RTlGMzgyMTIKUldRU2d2UHBGc1BMME93U0pMWjhmUCsxYm5qVUpzcWxjRGhQTmNQVzlJUU14N2dtYXZaMVY3VkcK"
    }
  },
  "productName": "Kunlun",
  "version": "1.0.0"
}
